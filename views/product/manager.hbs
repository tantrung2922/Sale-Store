<link rel="stylesheet" href="/public/css/style.css">
<div class="contaner-fluid row" style="padding: 20px; margin-top: 60px;
  align-items: center; justify-content: center;">

  <nav class="navbar bg-light">
    <div class="container-fluid">
      <a class="btn btn-success" href="/product/addProduct"> AddProduct</a>
      <form class="d-flex" action="/managerProduct/search" method="get"
        autocomplete="off">
        <input class="form-control me-2" type="search" placeholder="Search"
          aria-label="Search" name="searchName">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>

    </div>
  </nav>
  {{#each infoProduct}}
  <div class="card mb-3 col-sm-10" style="margin: 10px 10px 10px 50px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{this.avataProduct}}" class="img-fluid rounded-start"
          alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">Name: {{this.name}}</h5>
          <div class="row">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Price</th>
                  <th scope="col">Height</th>
                  <th scope="col">Width</th>
                  <th scope="col">Length</th>
                  <th scope="col">Weight</th>
                </tr>
              </thead>
              <tbody>
                <tr class="table-active">
                  <tr>
                    <td>{{this.price}}$</td>
                    <td>{{this.height}}cm</td>
                    <td>{{this.width}}cm</td>
                    <td>{{this.length}}cm</td>
                    <td>{{this.weight}}kg</td>
                  </tr>
                </tr>

              </tbody>
            </table>

            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Country</th>
                  <th scope="col">Color</th>
                  <th scope="col">Type</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Type Bullet</th>
                </tr>
              </thead>
              <tbody>
                <tr class="table-active">
                  <tr>

                    <td>{{this.country}}</td>
                    <td>{{this.color}}</td>
                    <td>{{this.type}}</td>
                    <td>{{this.quantity}}</td>
                    <td>{{this.typeBullet}}</td>
                  </tr>
                </tr>

              </tbody>
            </table>

            <div class="row">
              <a href="/managerProduct/deleteProduct/{{this._id}}" class="btn
                btn-danger col-sm-4"
                style="width: 100px; font-size: 15px; padding: 0px; margin: 0px;
                height: 25px;">Delete</a>

              <a href="/managerProduct/{{this._id}}" class="btn btn-primary
                btn-sm"
                style="width: 100px; font-size: 15px; padding: 0px; margin: 0px
                10px 0px 10px;
                height: 25px;">Edit</a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  <h5 style="margin-left: 30px;">Search Results: {{ numResults }}</h5>
</div>