<div class="row" style="margin-top: 100px;">
  <div id="carouselExampleControls" class="carousel slide col-sm-5"
    data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img style="width: auto; height: auto;"
          src="{{productDetail.avataProduct}}" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item active">
        <img style="width: auto; height: auto;" src="{{productDetail.image}}"
          class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img style="width: auto; height: auto;" src="{{productDetail.image2}}"
          class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img style="width: auto; height: auto;" src="{{productDetail.image}}"
          class="d-block w-100" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button"
      data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button"
      data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <div class="col-sm-7">
    <h1 style="font-weight: bold; color: #d71921;">
      {{productDetail.name}}
    </h1>
    <div class="accordion" id="accordionPanelsStayOpenExample">
      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-headingOne">
          <button class="accordion-button" type="button"
            data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
            aria-controls="panelsStayOpen-collapseOne" style="font-weight: bold; ">
            Size
          </button>
        </h2>
        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse
          show" aria-labelledby="panelsStayOpen-headingOne">
          <div class="accordion-body">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Price</th>
                  <th scope="col">Height</th>
                  <th scope="col">Width</th>
                  <th scope="col">Length</th>
                  <th scope="col">Weight</th>
                </tr>
              </thead>
              <tbody>
                <tr class="table-active">
                  <tr>
                    <td>{{productDetail.price}}$</td>
                    <td>{{productDetail.height}}cm</td>
                    <td>{{productDetail.width}}cm</td>
                    <td>{{productDetail.length}}cm</td>
                    <td>{{productDetail.weight}}kg</td>
                  </tr>
                </tr>

              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
          <button class="accordion-button collapsed" type="button"
            data-bs-toggle="collapse"
            data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
            aria-controls="panelsStayOpen-collapseTwo" style="font-weight: bold; ">
            Information
          </button>
        </h2>
        <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse"
          aria-labelledby="panelsStayOpen-headingTwo">
          <div class="accordion-body">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Country</th>
                  <th scope="col">Color</th>
                  <th scope="col">Type</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Type Bullet</th>
                </tr>
              </thead>
              <tbody>
                <tr class="table-active">
                  <tr>

                    <td>{{productDetail.country}}</td>
                    <td>{{productDetail.color}}</td>
                    <td>{{productDetail.type}}</td>
                    <td>{{productDetail.quantity}}</td>
                    <td>{{productDetail.typeBullet}}</td>
                  </tr>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div style="height: 100px;text-align: right;" >
  <a href="/productList/saveProduct" class="btn btn-success" style="margin: 20px;
   padding: 10px 30px 10px 30px; font-weight: bold;">Save</a>

  <a href="/productList/oderProduct" class="btn btn-info"  style="margin-right: 50px;
   padding: 10px 30px 10px 30px; font-weight: bold;">Oder</a>
</div>
