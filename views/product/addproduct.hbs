
<div class="container">
    <h2 style="margin: 100px 0px 30px 0px;">Add Product</h2>
    <form class="register" action="/product/addProduct" method="POST"
        style="
        border: 1px solid black;
        border-radius: 15px;
        padding: 20px;">
        <div class="card row" style="width: 100%; flex-direction: row;
            margin-bottom: 30px;">
            <h2 style="font-size: 25px; border-bottom: 1px solid rgb(205, 203,
                203);
                margin-bottom: 20px;
                font-weight: bold; background-color: rgb(197, 196, 196);">Images
                Product</h2>
            <div class="mb-3 col-sm-6">
                <label for="avataProduct" class="form-label">Product Avatar</label>
                <input type="file" class="form-control" name="avataProduct">
            </div>
            <div class="mb-3 col-sm-6">
                <label for="image" class="form-label">Product Image</label>
                <input type="file" class="form-control" name="image">
            </div>

            <div class="mb-3 col-sm-6">
                <label for="image2" class="form-label">Product Image 2</label>
                <input type="file" class="form-control" name="image2">
            </div>

            <div class="mb-3 col-sm-6">
                <label for="image3" class="form-label">Product Image 3</label>
                <input type="file" class="form-control" name="image3">
            </div>
        </div>

        <div class="card row" style="width: 100%; flex-direction: row;
            margin-bottom: 30px;">
            <h2 style="font-size: 25px; border-bottom: 1px solid rgb(205, 203,
                203);
                margin-bottom: 20px;
                font-weight: bold; background-color: rgb(197, 196, 196);">Infomation
                Product</h2>
            <div class="mb-3 col-sm-6">
                <label for="name" class="form-label">Product Name</label>
                <input type="text" class="form-control" name="name">
            </div>
            <div class="mb-3 col-sm-6">
                <label for="price" class="form-label">Product Price</label>
                <input type="text" class="form-control" name="price">
            </div>
            <div class="mb-3 col-sm-6">
                <label for="quantity" class="form-label">Product Quantity</label>
                <input type="number" class="form-control" name="quantity">
            </div>
            <div class="mb-3 col-sm-6">
                <label for="height" class="form-label">Height</label>
                <input type="text" class="form-control" name="height">
            </div>
            <div class="mb-3 col-sm-6">
                <label for="width" class="form-label">Width</label>
                <input type="text" class="form-control" name="width">
            </div>
            <div class="mb-3 col-sm-6">
                <label for="length" class="form-label">Lenght</label>
                <input type="text" class="form-control" name="length">
            </div>
            <div class="mb-3 col-sm-6">
                <label for="weight" class="form-label">Weight</label>
                <input type="text" class="form-control" name="weight">
            </div>

            <div class="mb-3 col-sm-6">
                <label for="color" class="form-label">Product Color</label>
                <input type="text" class="form-control" name="color">
            </div>

        </div>

        <div class="card row" style="width: 100%; flex-direction: row;
            margin-bottom: 30px;">
            <h2 style="font-size: 25px; border-bottom: 1px solid rgb(205, 203,
                203);
                margin-bottom: 20px;
                font-weight: bold; background-color: rgb(197, 196, 196);">Other
                Info</h2>
            <div class="mb-3 col-sm-6">
                <label for="type" class="form-label">Type</label>
                <select class="form-select" name="type" aria-label="Default
                    select example">
                    <option selected>Choose Product Type</option>
                    <option value="rifle">Rifles</option>
                    <option value="pistol">Pistols</option>
                    <option value="other">other</option>
                </select>
            </div>

            <div class="mb-3 col-sm-6">
                <label for="country" class="form-label">Country</label>
                <input type="text" class="form-control" name="country">
            </div>
            <div class="mb-3 col-sm-6">
                <label for="companyName" class="form-label">Company</label>
                <input type="text" class="form-control" name="companyName">
            </div>

            <div class="mb-3 col-sm-6">
                <label for="typeBullet" class="form-label">Type Bullet</label>
                <input type="text" class="form-control" name="typeBullet">
            </div>
        </div>


        <div style="color: red;">
            {{alert}}
        </div>
        <button style="width: 100%; margin: 20px 0px 10px 0px" type="submit"
            class="btn btn-dark">Add Product</button>
    </form>

</div>