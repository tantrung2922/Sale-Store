<link rel="stylesheet" href="/public/css/style.css">
<div class="contaner-fluid row" style="padding: 20px; margin-top: 60px;
    align-items: center; justify-content: center;">

    {{#each infoProduct}}
    <div id="carouselExampleIndicators" class="carousel slide"
        data-bs-ride="true" style="height: 100px; width: 500px;">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="0" class="active" aria-current="true"
                aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="width: auto; height: auto;" src="{{this.avataProduct}}" class="d-block w-100"
                    alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{this.image}}" class="d-block w-100"
                    alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{this.image2}}" class="d-block w-100"
                    alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{this.image3}}" class="d-block w-100"
                    alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button"
            data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button"
            data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>



    <div class="card mb-3 col-sm-10" style="margin: 10px 10px 10px 50px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{this.avataProduct}}" class="img-fluid rounded-start"
                    alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Name: {{this.name}}</h5>
                    <div class="row">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Price</th>
                                    <th scope="col">Height</th>
                                    <th scope="col">Width</th>
                                    <th scope="col">Length</th>
                                    <th scope="col">Weight</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="table-active">
                                    <tr>
                                        <td>{{this.price}}$</td>
                                        <td>{{this.height}}cm</td>
                                        <td>{{this.width}}cm</td>
                                        <td>{{this.length}}cm</td>
                                        <td>{{this.weight}}kg</td>
                                    </tr>
                                </tr>

                            </tbody>
                        </table>

                        <div class="row">
                            <a href="/managerProduct/deleteProduct/{{this._id}}"
                                class="btn
                                btn-danger col-sm-4"
                                style="width: 100px; font-size: 15px; padding:
                                0px; margin: 0px;
                                height: 25px;">Delete</a>
                            
                            <a href="/managerProduct/{{this._id}}" class="btn
                                btn-primary
                                btn-sm"
                                style="width: 100px; font-size: 15px; padding:
                                0px; margin: 0px
                                10px 0px 10px;
                                height: 25px;">Edit</a>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <h5 style="margin-left: 30px;">Search Results: {{ numResults }}</h5>
</div>