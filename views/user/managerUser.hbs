<div class="contaner-fluid row" style="padding: 20px; margin-top: 60px;
  align-items: center; justify-content: center;">

  <nav class="navbar bg-light">
    <div class="container-fluid">
      <a class="btn btn-success" href="/managerUser/addUser"> Add User</a>

      <form class="d-flex" action="/managerUser/searchUser" method="get"
        autocomplete="off">
        <input class="form-control me-2" type="search" placeholder="Search"
          aria-label="Search" name="searchName">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>

    </div>
  </nav>


  <table class="table table-bordered">
    <tr>
      <th>User Name</th>
      <th>Password</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Country</th>
      <th>Avatar</th>
      <th>Action</th>
    </tr>

    {{!-- Vong lap --}}
    {{#each listUser}}

    <tr>
      <td>{{this.userName}}</td>
      <td>{{this.password}}</td>
      <td>{{this.fullName}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phoneNumber}}</td>
      <td>{{this.address}}</td>
      <td>{{this.gender}}</td>
      <td>{{this.birthday}}</td>
      <td>{{this.country}}</td>
      <td><img src="{{this.avatar}}" style="width: 100px; height: 100px;"
          alt="Image"></td>
      <td>
        <a href="/managerUser/{{this._id}}" class="btn btn-primary btn-sm" style="margin: 10px;"> Edit
        </a>
        <a href="/managerUser/del/{{this._id}}" onclick="return confirm('Are you
          sure?')" class="btn btn-danger btn-sm"> Delete </a>
      </td>
    </tr>

    {{/each}}
  </table>
      <h5 style="margin-left: 30px;">Search Results: {{ numResults }}</h5>
</div>