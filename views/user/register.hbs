
<div class="container">
  <h2 style="margin: 100px 0px 30px 0px;">Register Accout</h2>
  <form class="register" action="/register/registerUser" method="POST"
    style="
    border: 1px solid black;
    border-radius: 15px;
    padding: 20px;">
    <div class="mb-3">
      <label for="userName" class="form-label">User Name</label>
      <input type="text" class="form-control" name="userName">
    </div>
    <div class="mb-3">
      <label for="fullName" class="form-label">Full Name</label>
      <input type="text" class="form-control" name="fullName">
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" name="password">
    </div>
    <div class="mb-3">
      <label for="rePassword" class="form-label">Confirm Password</label>
      <input type="password" class="form-control" name="rePassword">
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" name="email">
    </div>
    <div class="mb-3">
      <label for="phoneNumber" class="form-label">Phone Number</label>
      <input type="number" class="form-control" name="phoneNumber">
    </div>
    <div class="mb-3">
      <label for="gender">Gender:</label>
      <select name="gender" style="padding: 9px 0px ;">
        <option value="male">Male</option>
        <option value="female">Female</option>
        <option value="other">Other</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="birthday" class="form-label">Birthday</label>
      <input type="date" class="form-control" name="birthday">
    </div>
    <div style="color: red;">
      {{alert}}
    </div>
    <button style="width: 100%; margin: 20px 0px 10px 0px" type="submit"
      class="btn btn-dark">Register your accout</button>
  </form>

</div>